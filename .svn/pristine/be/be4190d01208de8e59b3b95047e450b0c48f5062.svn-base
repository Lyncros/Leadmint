@import url(http://fonts.googleapis.com/css?family=Lobster);
body {
    padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
  }
.container{width:960px;}
.hero-unit h1 {font-family: Lobster; color: #333; font-size: 50px;  text-shadow: 0 1px 1px rgba(0,0,0,.4);}
.hero-unit h1 .small{color: #2eb54e; font-size: 40px;  text-shadow: 0 1px 1px rgba(0,0,0,.4);}
.hero-unit {
border: 6px solid rgba(255, 255, 255, 1);
  -webkit-box-shadow: 0 1px 7px rgba(0, 0, 0, 0.1);
     -moz-box-shadow: 0 1px 7px rgba(0, 0, 0, 0.1);
          box-shadow: 0 1px 7px rgba(0, 0, 0, 0.1);
}

h1.green {color:#2eb54e;}
.small {font-size: 14px;}

input.error {border-color: #B94A48; color: #B94A48;}
p.error {color: #B94A48;}


.brand{
	background: url('../img/logo_cms.png') no-repeat center center;
	width: 110px;
	text-indent: -999999px;
}
.nav.nav-tabs { margin-bottom: 0px; border-bottom: none;}
.nav li.active a { background: #f5f5f5; }

#app_avatar_holder, #app_avatar_holder img {
	width: 120px;
	height: 120px;
}
#app_avatar_holder {border: 1px solid #666; background: #CCC;}

.form-horizontal .control-label {width: 300px;}
.form-horizontal .controls {margin-left: 320px;}
.form-horizontal .upgrade-text {margin-left: 160px; display: none;}

textarea.rich-textarea {width: 500px; height: 200px;}

#modal-simpletext textarea {width: 530px; height: 300px; resize: none;}

.navbar-fixed-top .container, .navbar-fixed-bottom .container {width: 960px;}

#preview-window {position:fixed; z-index:20000; left:0px; top:0px; display:none; overflow: auto; background:url(../img/fb-bg.png) repeat-x #E7EBF2;}
#preview-top {position:fixed; top:0px; left:0px; background:url(../img/fb-top.png) no-repeat 35px 0px; height: 88px; }
#preview-status {position:fixed; bottom:0px; left:0px;}
#preview-sidebar {position:fixed; top:0px; right:20px; width:179px; border-left:#8A8D91 1px solid; height: 100%; }
#preview-sidebar-top {background:url(../img/fb-sidebar-top.png)}
#preview-sidebar-bottom {position:absolute; bottom:0px; right:0px; width:179px; border-top:#CCD0DB 1px solid; height: 69px; background:url(../img/fb-sidebar-bottom.png) no-repeat}
#preview-content {min-height: 1200px; padding-top: 97px; padding-left: 35px;}
#preview-canvas {background: #FFF; border: 1px solid #C4CDE0; width: 810px; min-height: 100px; padding: 20px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px; 
}

.loading {background-image: url(../img/ajax-loader.gif); background-repeat: no-repeat; background-position: 50% 50%; }

.pagination {text-align: right}
.pagination li span {display: inline-block; float: left; padding: 0px 14px; line-height: 34px}

#select_app {margin-bottom: 0;}


#home-anonymus .hero-unit .row.show-grid{padding-top: 40px;}
#home-anonymus .hero-unit .span5{text-align: right; width:390px; padding-left: 30px;}
#home-anonymus .hero-unit .lead{ color: #666; padding-top: 20px; font-size: 30px; }
#home-anonymus .btn-primary {
	background-color: rgb(237, 173, 15); 
	text-shadow: rgba(0,0,0,0.5) -1px 0, rgba(0,0,0,0.3) 0 -1px, rgba(255,255,255,0.5) 0 1px, rgba(0,0,0,0.3) -1px -1px;
	width:200px;
}
#home-anonymus .btn-primary:hover { background-color: rgb(226, 166, 19);}
#reg .hero-unit{padding-left: 230px; background: rgb(247, 247, 247) url('/html/img/cms/check.png') no-repeat 139px 64px;}
#reg .hero-unit p{text-transform: uppercase;font-size: 17px; color: #777;}

#register #form-register {margin-top: 85px;}
#register .country label{
	float: left;
	padding-top: 4px;
	padding-right: 60px;
}
#register input{padding:10px;}
#register select{width:270px;}
#register .country {padding:10px;}
#register #submit-btn{text-align: right; padding-right: 15px;}
#register #submit-btn button{width:150px;}
#form-login{margin: 0px auto; width: 400px; height: 240px;}
#form-login h1{padding-bottom: 20px;}
#form-login input{padding:20px auto;}
#form-login #open-modal {float:left;}
#form-login .checkbox{margin-bottom: 30px;}

