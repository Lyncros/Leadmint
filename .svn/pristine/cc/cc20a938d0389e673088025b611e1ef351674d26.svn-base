@import url("../bootstrap.min.css");
@import url("../bootstrap-responsive.min.css");

body { font-family: helvetica, arial; font-size: 14px;}

#header-holder {overflow: hidden;}

.promo-form-holder {padding:25px 30px 10px 30px; display:none; background-color: #F5F5F6; border-radius: 8px 8px 8px 8px; margin-bottom: 10px; }

.contest-form p {width:50%; margin-bottom: 20px; float:left;}

.contest-form p.birthday label, .contest-form p.country label{width: 100px; float: left; margin-right: 10px;}
.contest-form p.p_country select {width:235px; margin-top:11px;}

.contest-form .radio label.label_gender {float:left; width:140px; padding-right: 10px; vertical-align:middle; margin-top: 12px; color: black; font-size:100%;}
.contest-form  label.error {width:322px; color:red; font-size: 10px; margin-top: 2px;}

.contest-form  input, .contest-form textarea, .contest-form select, .contest-form .radio label {font-family: Verdana, Arial; font-size: 12px; color: #333; margin-bottom: 0px;}
.contest-form .radio label {font-size: 12px; line-height: 24px; width: auto; display: inline-block; vertical-align: baseline;}


.contest-form .input-prepend .add-on {padding: 12px 10px 8px 10px; font-size: 16px; }

#form-submit{display: block; margin: 0 auto; width: 300px; font-size: 18px; }

.contest-form input[type="text"] { width: 80%; padding: 10px;}
.contest-form input[type="submit"], .contest-form input[type="button"] {color: #fff;}

.contest-form .publish { 
	background-color: #5b74a8;
	border-color: #29447e #29447e #1a356e; 
}

#birthday-day, #birthday-month, #birthday-year{
	width: 67px;
}

.contest-form textarea {
	width: 711px;
	margin-left: 15px;
	margin-bottom: 10px;
	padding: 4px;
	border: 1px solid #CCC;
	resize: none;
	height: 41px;
	float: left;
}

.contest-form .checkbox input[type="checkbox"], .contest-form .radio input[type="radio"] {float: none; margin-left: 0;}
.contest-form .actions {clear:both; text-align: right;}
.contest-form .radio {padding-left: 0px;}
.contest-form label input, .contest-form label textarea, .contest-form label select {display: inline-block;}

#already-participating { padding: 20px; background: #F5f5f5; margin: 20px 0; display: none; text-align: center;
						 font-size: 25px; font-family: arial; color: #555; padding-bottom: 20px; }


